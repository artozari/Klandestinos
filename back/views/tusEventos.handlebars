<div id="crearEvento">
  <form action="/registroEvento" method="post">
    <input type="submit" name="btnRegistroEvento" id="bntRegistroEvento" value="Crear nuevo Evento" />
  </form>
</div>

{{#if cantEventos}}
  <input type="hidden" name="cantEventos" value="{{cantEventos}}" id="cantEventos" />
{{/if}}
{{#if cantEventos}}
  {{#if eventos}}
    {{#each eventos}}
      <div class="tusEventos" name="tusEventos">
        <h1>{{this.nombre}}</h1>
        <input type="hidden" name="idHidden" value="{{this._id}}" id="idHidden" />
        <img src="{{this.urlImage}}" alt="" />
        <h2 class="organizador">Organizador: {{this.usuarioCreador}}</h2>
        <h3 class="desdeHasta">Desde: {{this.fechaEvento}} - Hasta:{{this.fechaFin}}</h3>
        <p class="ubicacionEvento">{{this.ubicacion}}</p>
        <p class="descripcionEvento">{{this.descripcion}}</p>
        <input type="button" value="Asistir" id="btnAsistirEvento" class="btnAsistirEvento" />
        <input type="button" value="abandonar" id="btnAbandonarEvento" class="btnAbandonarEvento" />
        {{! <input type="button" value="Compartir" id="btnCompartirEvento" class="btnCompartirEvento" /> }}

        {{! desde aqui se comenta y se muestran comentarios }}

        <div class="contenedor-Comentarios" id="contenedor-Comentarios" name="contenedor-Comentarios">

          <input type="text" name="inputComentario" class="inputComentario" id="inputComentario" />
          <input type="button" value="Comentar" id="btnComentar" class="btnComentar" />
          <div class="mensajesDeEvento" id="mensajesDeEvento">
            <div class="losComentarios" id="losComentarios">
              {{! <textarea name="txtAreaComentarios" id="txtAreaComentarios" cols="30" rows="10"></textarea> }}
            </div>
          </div>
          {{! <script src="../../front/js/contenedorComentarios.js"></script> }}
        </div>

      </div>
    {{/each}}
  {{/if}}
{{/if}}